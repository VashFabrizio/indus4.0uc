<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AsistenciaActivity">
    <TextView
        android:id="@+id/textView"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  ASISTENCIA"
        android:drawableLeft="@drawable/ic_rate_review_black_24dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#000000" />

    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:id="@+id/txtMiId"></TextView>

    <ImageView
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/ivMiQR"></ImageView>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"></Space>
    <Button
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Principal"
        android:background="@drawable/bg_btn2"
        android:textColor="@drawable/txt_btn_prueba"
        android:id="@+id/btnAsistenciaPrincipal"></Button>
</LinearLayout>